{
    "networkMode": "bridge",
    "containerDefinitions": [
        {
            "memory": 384,
            "portMappings": [
                {
                    "hostPort": 0,
                    "containerPort": 8080,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "command": [
                "bash -c 'touch /app.jar'"
            ],
            "entryPoint": [
                "\"java\"",
                "\"-Djava.security.egd=file:/dev/./urandom\"",
                "\"-jar\"",
                "\"/app.jar\""
            ],
            "name": "{ECS_CONTAINER_NAME}",
            "image": "{ECR_REPOSITORY_DOMAIN}/{DOCKER_IMAGE}:latest",
            "cpu": 0
        }
    ],
    "family": "{ECS_TASK_DEFINITION_NAME}"
}